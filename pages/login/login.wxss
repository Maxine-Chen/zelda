/* pages/login/login.wxss */
.login-container {
	padding: 60rpx 50rpx;
	min-height: 100vh;
	background: linear-gradient(135deg, #8fe5eb 0%, #c2b4f5 100%);
  }
  
  .login-header {
	text-align: center;
	margin-bottom: 80rpx;
  }
  
  .login-title {
	display: block;
	font-size: 48rpx;
	font-weight: bold;
	color: white;
	margin-bottom: 20rpx;
  }
  
  .login-subtitle {
	display: block;
	font-size: 30rpx;
	color: rgba(255, 255, 255, 0.8);
  }
  
  .login-form {
		background-color: cornsilk;
	border-radius: 20rpx;
	padding: 60rpx 40rpx;
	margin-bottom: 40rpx;
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  .input-group {
	margin-bottom: 50rpx;
  }
  
  .input-label {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
  }
  
  .input-icon {
	width: 32rpx;
	height: 32rpx;
	margin-right: 15rpx;
  }
  
  .input-field {
	border: 2rpx solid #e0e0e0;
	border-radius: 12rpx;
	padding: 25rpx 20rpx;
	font-size: 28rpx;
	background: #f8f9fa;
  }
  
  .input-field:focus {
	border-color: #a89;
	background: white;
  }
  
  .placeholder {
	color: #999;
	font-size: 28rpx;
  }
  
  .remember-group {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 60rpx;
  }
  
  .remember-label {
	display: flex;
	align-items: center;
	font-size: 26rpx;
	color: #666;
  }
  
  .forgot-password {
	font-size: 26rpx;
	color: #a89;
  }
  
  .login-btn {
	background-color:  rgb(207, 121, 59);
	color: white;
	border-radius: 50rpx;
	padding: 30rpx;
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 40rpx;
  }
  
  .login-btn:disabled {
	background: #ccc;
  }
  
  .register-guide {
	text-align: center;
	font-size: 26rpx;
	color: #666;
  }
  
  .register-link {
	color: #a89;
	margin-left: 10rpx;
  }
  
  .other-login {
	padding: 0 20rpx;
  }
  
  .divider {
	display: flex;
	align-items: center;
	margin-bottom: 40rpx;
  }
  
  .divider-line {
	flex: 1;
	height: 1rpx;
	background: rgba(255, 255, 255, 0.3);
  }
  
  .divider-text {
	padding: 0 30rpx;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.7);
  }
  
  .login-methods {
	display: flex;
	justify-content: center;
	gap: 60rpx;
  }
  
  .method-btn {
	display: flex;
	flex-direction: column;
	align-items: center;
	background: rgba(255, 255, 255, 0.2);
	border: 2rpx solid rgba(255, 255, 255, 0.3);
	border-radius: 20rpx;
	padding: 30rpx;
	width: 180rpx;
  }
  
  .method-icon {
	width: 60rpx;
	height: 60rpx;
	margin-bottom: 15rpx;
  }
  
  .method-btn text {
	font-size: 24rpx;
	color: white;
  }
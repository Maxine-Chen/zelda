<!--pages/login/login.wxml-->
<navigation-bar title="登录" back="{{true}}" color="white" background="#a89"></navigation-bar>

<view class="login-container">
  <!-- 登录头部 -->
  <view class="login-header">
    <text class="login-title">欢迎回来</text>
    <text class="login-subtitle">请登录您的账户</text>
  </view>

  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 账号输入 -->
    <view class="input-group">
      <view class="input-label">
        <text>账号</text>
      </view>
      <input 
        class="input-field" 
        type="text" 
        placeholder="请输入账号" 
        placeholder-class="placeholder"
        value="{{usernum}}"
        bindinput="onUsernumInput"
      />
    </view>

    <!-- 密码输入 -->
    <view class="input-group">
      <view class="input-label">
        <text>密码</text>
      </view>
      <input 
        class="input-field" 
        password 
        placeholder="请输入密码" 
        placeholder-class="placeholder"
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>

   
    <!-- 登录按钮 -->
    <button class="login-btn" bindtap="handleLogin" disabled="{{!usernum || !password}}">登录</button>

    <!-- 注册引导 -->
    <view class="register-guide">
      <text>还没有账户？</text>
      <text class="register-link" bindtap="onRegister">立即注册</text>
    </view>
  </view>
</view>
<!--index.wxml-->
<navigation-bar title="ZELDA" back="{{false}}" color="white" background="#a89"></navigation-bar>

<scroll-view class="scrollarea" scroll-y type="list">
	<view>
		<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" vertical="{{vertical}}">
			<block wx:for="{{banner}}" wx:key="id">
				<swiper-item>
					<image src="{{baseUrl}}{{item.imgPath}}"></image>
				</swiper-item>
			</block>
		</swiper>
	</view>

	<!-- 金刚区 -->
	<view class="diamond-grid">
		<view class="grid-container">
			<view class="grid-item" wx:for="{{array1}}" wx:key="id" bindtap="onGridItemClick" data-id="{{item.id}}" data-url="../tool/tool">
				<image class="icon" src="{{baseUrl}}{{item.iconPath}}"></image>
				<text class="tool-text">{{item.toolText}}</text>
			</view>
		</view>
	</view>

	<!-- 登录区 -->
	<view class="login-area" wx:if="{{!isLoggedIn}}">
		<view class="login-card">
			<view class="login-left">
				<text class="login-title">欢迎来到ZELDA</text>
				<text class="login-subtitle">立即登录体验更多功能</text>
			</view>
			<view class="login-right">
				<button class="login-btn" bindtap="handleLogin">立即登录</button>
			</view>
		</view>
	</view>

	<!-- 用户信息区 -->
<view class="user-area" wx:if="{{isLoggedIn}}">
		<view class="user-card">
			<view class="user-info">
				<text class="user-name">您好！{{username}}</text>
			</view>
			<view class="user-actions">
				<button class="logout-btn" bindtap="handleLogout">退出登录</button>
			</view>
		</view>
	</view>


	<!-- 内容区 -->
	<view class="neirong">
		<view class="neirong-item" wx:for="{{content}}" wx:key="id" bind:tap="onContentItemClick" data-id="{{item.id}}" data-url="../content/content">
			<image class="icon1" src="{{baseUrl}}{{item.contentImg}}" mode="aspectFit" />
			<text style="font-size: 60rpx; font-weight:800; font-style: italic; color: #b68316;">{{item.contentTitle}}</text>
			<text class="text">{{item.contentTxt}}</text>
		</view>
	</view>
</scroll-view>
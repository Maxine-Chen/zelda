/* pages/car/car.wxss */

.tool{
	display:flex;
	flex-direction: row;
}

.goods{
	display: flex;
	flex-direction: row;
	height: 200rpx;
	padding:20rpx;
	border-bottom: 1px solid #ddd;
}


.goods-image {
	width: 100%;
	height: 200rpx;
	padding-left: 20rpx;
  }

.goods-txt{
	height: 200rpx;
	flex: 1; 
	padding-left: 30rpx;
}

.input-num{
	border:1rpx solid rgb(182, 224, 235);
	text-align: center;
	font-size: 20rpx;
	font-weight: bold;
}

.btn{
	width: 15%;
	border:1rpx solid rgb(182, 224, 235);
	text-align: center;
	padding-left: 5%;
	padding-right: 5%;
}

.footer{
	height: 80rpx;
	border-top: 1px solid #aaa;
	background-color:#fff;
	position:absolute;
	bottom: 1rpx;
	width: 100%;
	display: flex;
	flex-direction: row;
}

.footer-item{
	display:flex;
	justify-content: center;
	align-items: center;
}

.btn-submit{
	height: 100%;
	width: 75%;
	text-align: center;
	line-height:80rpx;
	background-color:  rgb(207, 121, 59);
	color: #fff ;
	border-radius: 10rpx;
}
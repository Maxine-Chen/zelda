/* pages/try_to/try_to.wxss */
.container {
	height: 100vh;
	background-color: #f5f5f5;
}

.content-detail {
	background-color: #ffffff;
	margin: 20rpx;
	padding: 30rpx;
	border-radius: 16rpx;
	box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.content-title {
	font-size: 40rpx;
	font-weight: 700;
	color: #333;
	margin-bottom: 30rpx;
	line-height: 1.5;
}

.content-image {
	width: 100%;
	height: 400rpx;
	margin-bottom: 30rpx;
	border-radius: 12rpx;
	overflow: hidden;
}

.content-image image {
	width: 100%;
	height: 100%;
}

.content-text {
	font-size: 28rpx;
	line-height: 1.8;
	color: #666;
	margin-bottom: 30rpx;
}

.edit-button-container {
	margin-top: 40rpx;
	padding-top: 30rpx;
	border-top: 1rpx solid #e0e0e0;
}

.edit-btn {
	width: 100%;
	padding: 28rpx;
	font-size: 32rpx;
	font-weight: 600;
	color: #fff;
	background: linear-gradient(135deg, #a89 0%, #8a7 100%);
	border-radius: 12rpx;
	border: none;
}

.loading {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	font-size: 32rpx;
	color: #999;
}
